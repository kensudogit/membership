# 開発環境用のオーバーライド設定例
# 使用例: cp docker-compose.override.yml.example docker-compose.override.yml
# docker-compose.override.ymlは自動的にdocker-compose.ymlとマージされます

version: '3.8'

services:
  # 開発環境でのホットリロード設定
  membership-service:
    volumes:
      - ./membership-service/src:/app/src
    environment:
      - SPRING_DEVTOOLS_RESTART_ENABLED=true

  payment-service:
    volumes:
      - ./payment-service/src:/app/src
    environment:
      - SPRING_DEVTOOLS_RESTART_ENABLED=true

  lesson-service:
    volumes:
      - ./lesson-service/src:/app/src
    environment:
      - SPRING_DEVTOOLS_RESTART_ENABLED=true

  store-service:
    volumes:
      - ./store-service/src:/app/src
    environment:
      - SPRING_DEVTOOLS_RESTART_ENABLED=true

  frontend:
    volumes:
      - ./frontend/src:/app/src
      - ./frontend/public:/app/public
    environment:
      - NODE_ENV=development
      - WATCHPACK_POLLING=true

